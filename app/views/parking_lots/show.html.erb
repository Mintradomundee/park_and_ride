<div class="mt-1">
  <%= form_tag parking_lots_path, method: :get do %>
  <div class="searchbar mb-2">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find your parking lot"
    %>
    <%= submit_tag "Search", class: "btn ml-1"%>
  <% end %>
 </div>

<div id="map"
     style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<%# if @parking_lot.photo.attached? %>
  <%#= cl_image_tag @pokemon.photo.key%>
<%# else %>
  <%#= image_tag("https://source.unsplash.com/random", alt:"image") %>
<%# end %>

<% if @parking_lot.photo.attached? %>
  <%= cl_image_tag @parking_lot.photo.key, class: 'card-img' %>
<% else %>
  <%= image_tag "https://source.unsplash.com/500x200/", alt:"image", class: 'card-img' %>
<% end %>
<div class="show-card-description">
    <div class="card-name"><%= @parking_lot.name %></div>
    <div class="card-address"><%= @parking_lot.address %></div>
    <%#= @parking_lot.vehicle_type %>
    <div class="card-price">$<%= @parking_lot.price %>/Hr</div>
</div>

<div class="card-booking">
  <% if current_user != @parking_lot.user%>
    <div class="col-xs-12 col-sm-10 col-sm-1 p-3">
      <%= simple_form_for [@parking_lot, @booking] do |f| %>
      <%= f.input :start_time, as: :datetime, placeholder: "Start Date"%>
      <%= f.input :planned_end_time, as: :datetime,  placeholder: "End Date"%>
      <%= f.association :vehicle, collection: current_user.vehicles, label_method: :license_plate %>
      <%= f.submit 'Book', class: 'btn-book'%>
      <a class="btn-contact" href="#">Contact</a>
      <% end %>
    </div>
  <% end %>
</div>
