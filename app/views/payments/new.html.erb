<div class="container">
  <div class="row py-4">
<!--     <div class="col-md-3"><%#= cl_image_tag @booking.parking_lot.photo.key, width: '100%' %></div>
 -->  <div class="col">
      <h1>Checkout summary</h1>
      <p>Booking of <strong><%= @order.booking.parking_lot.name %></strong> for <strong><%= humanized_money_with_symbol @order.booking.price %></strong></p>
      <button id="pay" class="btn-book">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        console.log("<%= @order.checkout_session_id %>")
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
