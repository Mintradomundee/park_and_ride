 
<div id="map"
    style="height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="details-container">
  <div class="home-card-description card-black">
    <h2>EasyPark</h2>
    <h4>Fast & Convenient</h4>
  </div>
  <div class="search-form">
    <%= form_tag parking_lots_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control text-align",
      placeholder: "Your Destination"
    %>
    <%= text_field_tag :start_time,
      params[:start_time],
      class: "datepicker form-control text-align",
      placeholder: "Start Time"
    %>
    <%= text_field_tag :planned_end_time,
      params[:planned_end_time],
      class: "datepicker form-control text-align",
      placeholder: "End Time"
    %>
    <%= submit_tag "Search", class: "btn-search margin-search" %>
    <% end %>
  </div>
</div>
