
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

  <div class="container">
  <div class="subbanner">

  <h1>EasyPark</h1>
  <h4>The most convenient way of parking!</h4>
  </div>
  
  <div class="card-homepage">
    <%= form_tag parking_lots_path, method: :get do %>
    <%= text_field_tag :query, 
      params[:query],
      class: "form-control",
      label_tag: "Location",
      placeholder: "Where do you want to park?"
    %>
    <div class="d-flex">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      label_tag: "Start time",
      placeholder: "12:00"
    %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      label_tag: "Ende time",
      placeholder: "13:00"
    %>
    </div>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      label_tag: "Your vehicle type",
      placeholder: "Car"
    %>
    <%= submit_tag "Search", class: "btn btn-warning form-control" %>
    <% end %>
  </div>
  </div>


